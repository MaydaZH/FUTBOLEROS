<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detalleProducto"
    android:orientation="vertical"
    android:background="@color/colorFin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:alpha="0.8"
            app:cardCornerRadius="20dp">

            // pantalla general
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                ></LinearLayout>
            // contenedor general
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#fff"
                >
                // SCOTTERLANDIA
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        android:src="@drawable/marcaFinal"
                        android:layout_margin="0dp"
                        android:padding="0dp"/>


                </LinearLayout>

                // buscador
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:paddingBottom="10dp">

                    <EditText
                        android:id="@+id/editTextTextPassword"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:background="#C8CCC8"
                        android:textSize="14dp"
                        android:hint=" Buscar Scooter"
                        android:inputType="textPassword"
                        android:textColor="#111">

                    </EditText>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_search_24"
                        android:layout_marginLeft="5px"
                        />

                </LinearLayout>
                //DIVISION EN DOS PARA FILTRO Y IMAGENES
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:background="#C8CCC8">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"

                        android:orientation="vertical">
                        // CONTENEDOR PRODUCT

                        // SEGUNDA FILA DE PRODUCTOS

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="320dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"


                            >
                            // primer producto

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:orientation="vertical"
                                android:padding="10dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#FFF"
                                    android:gravity="center_horizontal"
                                    android:text="Honda Rotatorio"
                                    android:textColor="#111"
                                    android:textSize="22dp"
                                    android:textStyle="bold">

                                </TextView>
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#FFFFFF"
                                    android:src="@drawable/modelo1" />


                                // DETALLES DE PRODUCTO
                                //PRECIO
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#FFF"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="6dp"
                                            android:layout_marginTop="10dp"
                                            android:background="#FFF"
                                            android:gravity="center_vertical"
                                            android:text="PRECIO ALQUILER  :"
                                            android:textColor="#111"
                                            android:textSize="14dp"
                                            android:textStyle="bold"></TextView>

                                    </LinearLayout>
                                    // CHECK

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="3"
                                        android:orientation="vertical">

                                        <Button
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/degradadoboton"
                                            android:text="S/ 30.00"
                                            android:textColor="#ffffff"
                                            android:textSize="14dp"
                                            android:textStyle="bold"
                                            android:layout_margin="0dp"/>

                                    </LinearLayout>
                                </LinearLayout>
                                    //MARCA
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#FFF"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="6dp"
                                            android:layout_marginTop="6dp"
                                            android:background="#FFF"
                                            android:gravity="center_vertical"
                                            android:text="MARCA  :"
                                            android:textColor="#111"
                                            android:textSize="14dp"
                                            android:textStyle="bold"></TextView>

                                    </LinearLayout>
                                    // CHECK

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="3"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="6dp"
                                            android:layout_marginTop="6dp"
                                            android:background="#FFF"
                                            android:gravity="center_vertical"
                                            android:text="HONDA"
                                            android:textColor="#111"
                                            android:textSize="14dp"
                                            ></TextView>

                                    </LinearLayout>
                                </LinearLayout>
                                //MODELO
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#FFF"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="6dp"
                                            android:layout_marginTop="6dp"
                                            android:background="#FFF"
                                            android:gravity="center_vertical"
                                            android:text="MODELO  :"
                                            android:textColor="#111"
                                            android:textSize="14dp"
                                            android:textStyle="bold"></TextView>

                                    </LinearLayout>
                                    // CHECK

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="3"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="6dp"
                                            android:layout_marginTop="6dp"
                                            android:background="#FFF"
                                            android:gravity="center_vertical"
                                            android:text="X300 - PREMIUN"
                                            android:textColor="#111"
                                            android:textSize="14dp"
                                            ></TextView>

                                    </LinearLayout>
                                </LinearLayout>
                                //VALORACION
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#FFF"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="6dp"
                                            android:layout_marginTop="6dp"
                                            android:background="#FFF"
                                            android:gravity="center_vertical"
                                            android:text="EXP. DE SERVICIO:"
                                            android:textColor="#111"
                                            android:textSize="14dp"
                                            android:textStyle="bold"></TextView>

                                    </LinearLayout>
                                    // CHECK

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="3"
                                        android:orientation="horizontal">
                                       // ESTRELLITAS
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="3"
                                            android:src="@drawable/ic_baseline_star_24" />
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="3"
                                            android:src="@drawable/ic_baseline_star_24" />
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="3"
                                            android:src="@drawable/ic_baseline_star_24" />
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="3"
                                            android:src="@drawable/ic_baseline_star_24" />
                                    </LinearLayout>
                                </LinearLayout>
                                // FIN DETALLE DEL PRODUCTO
                            </LinearLayout>


                        </LinearLayout>
                        // PRODUCTOS SIMILARES
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="1dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Productos similares"
                                android:textSize="18dp"
                                android:textStyle="bold">

                            </TextView>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_weight="3"
                                android:src="@drawable/ic_baseline_add_circle_24" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal"
                            android:padding="2dp">
                            // primer producto

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:orientation="vertical"
                                android:padding="2dp">>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#FFFFFF"
                                    android:src="@drawable/modelo3" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#FFF"
                                    android:gravity="center_horizontal"
                                    android:text="Kawasaky Italica"
                                    android:textColor="#111"
                                    android:textSize="12dp"></TextView>
                            </LinearLayout>
                            // segundo producto

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#FFFFFF"
                                    android:src="@drawable/modelo4" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#ffffff"
                                    android:gravity="center_horizontal"
                                    android:text="Siomy X56-Elec."
                                    android:textColor="#111"
                                    android:textSize="12dp"></TextView>
                            </LinearLayout>
                            / tercere producto

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#FFFFFF"
                                    android:src="@drawable/modelo5" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#ffffff"
                                    android:gravity="center_horizontal"
                                    android:text="Kawasi  x10Free"
                                    android:textColor="#111"
                                    android:textSize="12dp"></TextView>
                            </LinearLayout>
                        </LinearLayout>

                        // PRODUCTOS SIMILARES
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="1dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:src="@drawable/ic_baseline_arrow_back_24"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="REGRESAR"
                                android:layout_margin="4dp"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:textColor="#839206">

                            </TextView>


                        </LinearLayout>

                        // CARGAR MAS PRODUCTOS
                        // primer producto


                        // cierre de contenedor de productos
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>